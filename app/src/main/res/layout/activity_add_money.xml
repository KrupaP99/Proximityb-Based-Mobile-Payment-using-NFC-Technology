<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sanktest.mytestapp.AddMoney">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp"
        android:clickable="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ADD MONEY"
            android:gravity="center"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#000"/>




        <TextView
            android:id="@+id/card_title"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Card Title"
            android:fontFamily="sans-serif-condensed"
            android:textStyle="bold"
            android:textSize="32dp"
            />
        <TextView
            android:id="@+id/card_account_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AMOUNT:"
            android:textColor="#000"
            android:fontFamily="sans-serif"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginTop="30dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/paymentAmt"
                android:text="@string/Rs"
                android:textSize="38sp"
                android:textColor="#000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"  />

            <EditText
                android:id="@+id/addamt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:width="360dp"
                android:textColor="#000"
                android:hint="Enter Amount"
                android:backgroundTint="@color/colorAccent"
                android:fontFamily="sans-serif-condensed"
                android:inputType="number"
                android:singleLine="true"
                android:textSize="52sp"
                android:textStyle="bold" />
        </LinearLayout>

        <Button
            android:id="@+id/makePay"
            android:text="Add Now"
            android:background="@drawable/dimens"
            android:paddingLeft="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:paddingRight="60dp"
            android:textColor="#fff"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="addmoneynow"/>

    </LinearLayout>

</RelativeLayout>
