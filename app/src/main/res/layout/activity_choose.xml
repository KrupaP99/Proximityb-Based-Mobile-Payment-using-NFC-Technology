    <RelativeLayout
        android:id="@+id/chosseCon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="20dp"
        android:background="#fff"
        android:layout_alignParentBottom="true">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/sent"
            android:id="@+id/register"
            android:onClick="sender"
            android:layout_marginRight="50dp"
            android:layout_toLeftOf="@+id/srdivider"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SEND"
            android:textSize="20sp"
           android:layout_below="@+id/register"
            android:textColor="@color/colorAccent"
            android:layout_marginRight="50dp"
            android:layout_toLeftOf="@+id/srdivider"/>
        <View
            android:id="@+id/srdivider"
            android:layout_width="2px"
            android:layout_height="30dp"
            android:background="#ddd"
            android:padding="2dp"
            android:layout_marginTop="4dp"
            android:layout_centerInParent="true"
            />


        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:textSize="20sp"
            android:id="@+id/rec"
            android:background="@drawable/received"
            android:onClick="receiver"
            android:layout_toRightOf="@+id/srdivider"
            android:layout_marginLeft="50dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RECEIVE"
            android:textSize="20sp"
            android:layout_below="@+id/rec"
            android:textColor="@color/colorAccent"
            android:layout_marginLeft="32dp"
            android:layout_toRightOf="@+id/srdivider"/>
    </RelativeLayout>

