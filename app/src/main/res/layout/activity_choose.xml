<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.sanktest.mytestapp.ChooseActivity">
    <RelativeLayout
    android:id="@+id/singleRow"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
    android:padding="10dp"
    android:background="#ffffff"
    android:elevation="4dp"
        >
    <ImageView
        android:id="@+id/paymentIco"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/user"/>
    <RelativeLayout
        android:id="@+id/detailsSec"
        android:layout_toRightOf="@+id/paymentIco"
        android:layout_marginLeft="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/userAccName"
            android:text="Aadesh Khale"
            android:textSize="24sp"
            android:textColor="#000"
            android:layout_margin="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/userMobile"
            android:text="9999888822"
            android:textSize="14sp"
            android:textColor="#000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/userAccName"/>
        <ImageView
            android:onClick="logout"
        android:layout_width="30dp"
        android:layout_height="30dp"
            android:layout_marginTop="20dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_if_exit_2676937"/>
    </RelativeLayout>
</RelativeLayout>
    <RelativeLayout
        android:id="@+id/singleRo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="#ffffff"
        android:layout_marginTop="8dp"
        android:elevation="4dp"
        android:layout_below="@+id/singleRow">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/cardIco"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentStart="true"
                android:src="@drawable/ic_credit_card_black_24dp"
                android:layout_alignParentLeft="true" />
            <TextView
                android:text=" CARD DETAILS"
                android:textSize="20sp"
                android:textColor="#000"
                android:layout_margin="2dp"
                android:layout_toRightOf="@+id/cardIco"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <!--<ImageView-->
                <!--android:id="@+id/chngAcc"-->
                <!--android:layout_width="30dp"-->
                <!--android:layout_height="30dp"-->
                <!--android:layout_alignParentRight="true"-->
                <!--android:src="@drawable/ic_swap_horiz_black_24dp"/>-->
        </RelativeLayout>

        <View
            android:id="@+id/cardPartition"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#ddd"
            android:layout_marginTop="40dp"/>

        <RelativeLayout
            android:id="@+id/carddetail"
            android:layout_marginLeft="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/cardPartition">

            <ImageView
                android:id="@+id/paymethodIco"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/visa"/>
            <RelativeLayout
                android:id="@+id/details"
                android:layout_toRightOf="@+id/paymethodIco"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/userBankName"
                    android:text="Union Bank Of India"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:layout_margin="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/userPanNo"
                android:text="XXXX XXXX XXXX 1412"
                android:textSize="14sp"
                android:textColor="#000"
                    android:layout_margin="2dp"
                    android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/userBankName"/>
                <TextView
                    android:id="@+id/expDate"
                    android:text="Expiry Date: 02/2022"
                    android:textSize="14sp"
                    android:layout_margin="2dp"
                    android:textColor="#000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/userPanNo"/>
            </RelativeLayout>
            <TextView
                android:id="@+id/userBankBal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="8dp"
                android:textColor="#000"
                android:layout_marginRight="8dp"
                android:textSize="26sp"
                android:text="\u20B95000"
                tools:ignore="HardcodedText" />
        </RelativeLayout>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/walletdetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:padding="10dp"
        android:background="#ffffff"
        android:elevation="4dp"
        android:layout_below="@+id/singleRo">
        <ImageView
            android:id="@+id/walletIco"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_account_balance_wallet_black_24dp"/>
        <RelativeLayout
            android:id="@+id/walletSec"
            android:layout_toRightOf="@+id/walletIco"
            android:layout_marginLeft="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/wallet"
                android:text="WALLET MONEY"
                android:textSize="18sp"
                android:textColor="#000"
                android:layout_margin="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/userWalletBal"
                android:text="\u20B90"
                android:textSize="26sp"
                android:textColor="#000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/wallet"/>

        </RelativeLayout>
        <View
            android:id="@+id/walletPartiton"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#ddd"
            android:layout_marginTop="70dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="4dp"
            android:layout_below="@+id/walletPartiton">

            <TextView
                android:id="@+id/addmoney"
                android:text="ADD MONEY +"
                android:textSize="16sp"
                android:layout_marginRight="30dp"
                android:layout_toLeftOf="@+id/walletpart"
                android:textColor="@color/colorAccent"
                android:onClick="addMoney"
                android:layout_marginTop="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <View
                android:id="@+id/walletpart"
                android:layout_width="1px"
                android:layout_height="50px"
                android:background="#ddd"
                android:padding="2dp"
                android:layout_marginTop="4dp"
                android:layout_centerInParent="true"
                />
            <TextView
                android:id="@+id/transmoney"
                android:text="TRANSFER"
                android:textSize="18sp"
                android:layout_marginLeft="30dp"
                android:layout_toRightOf="@+id/walletpart"
                android:textColor="@color/colorAccent"
                android:onClick="transMoney"
                android:layout_marginTop="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

    </RelativeLayout>
