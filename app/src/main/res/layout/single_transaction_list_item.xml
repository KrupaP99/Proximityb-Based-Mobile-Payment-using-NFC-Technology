<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#ffffff"
    android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="8dp"
    android:elevation="4dp">

    <RelativeLayout
        android:id="@+id/singleRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <ImageView
            android:id="@+id/paymentIco"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@drawable/received" />

        <LinearLayout
            android:id="@+id/detailsSec"
            android:layout_toRightOf="@+id/paymentIco"
            android:layout_marginLeft="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/transId"
                android:text="Transaction ID:"
                android:textSize="18sp"
                android:textColor="#000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/toacno"
                android:text="To:"
                android:textSize="18sp"
                android:textColor="#000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/fromacno"
                android:text="From:"
                android:textSize="18sp"
                android:textColor="#000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tdate"
                android:text="Date"
                android:textSize="18sp"
                android:textColor="#000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </LinearLayout>

        <TextView
            android:id="@+id/tamt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="8dp"
            android:textColor="#000"
            android:layout_marginRight="8dp"
            android:textSize="38sp"
            android:text="\u20B95000"
            tools:ignore="HardcodedText" />



    </RelativeLayout>

    <TextView
        android:id="@+id/tdname"
        android:text="Device"
        android:padding="8dp"
        android:textColor="#000"
        android:textAlignment="center"
        android:background="#f2f2f2"
        android:layout_below="@id/singleRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    </RelativeLayout>